# ============================================================
# ToDoList Application - Environment Configuration
# ============================================================
# Copy this file to .env and update the values as needed
# NEVER commit .env file to version control!
# ============================================================

# ========== Database Configuration ==========
# PostgreSQL database credentials
DB_USER=todouser
DB_PASSWORD=todopass
DB_NAME=todolist_db
DB_HOST=localhost
DB_PORT=5432

# Optional: Full database URL (overrides individual DB_ variables if set)
# DATABASE_URL=postgresql://todouser:todopass@localhost:5432/todolist_db

# ========== Application Settings ==========
# Application identification
APP_NAME=ToDoList
APP_ENV=development
# Options: development, production, testing

# Enable debug mode (true/false)
DEBUG=true

# API version
API_VERSION=3.0.0

# ========== API Server Configuration ==========
# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# ========== CORS Configuration ==========
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# ========== Logging Configuration ==========
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========== Maximum Limits ==========
# Maximum number of projects per user/system
MAX_NUMBER_OF_PROJECT=10

# Maximum number of tasks per project
MAX_NUMBER_OF_TASK=50